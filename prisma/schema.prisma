generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id       Int     @id @default(autoincrement())
  username String  @unique
  password String
  isAdmin  Boolean @default(false)
}

model Book {
  id        Int     @id @default(autoincrement())
  title     String
  author    String
  available Boolean @default(true)
}

model Category {
  id   Int    @id @default(autoincrement())
  nome String
}
